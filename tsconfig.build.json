// Transpiler (`tsc`) settings for production.
// Run this with `tsc -p tsconfig.prod.json` or if you want to change
// the destination folder: e.g: `tsc -p tsconfig.prod.json --outDir your/directory`
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "watch": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
